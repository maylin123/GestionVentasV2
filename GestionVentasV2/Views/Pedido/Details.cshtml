@model GestionVentasV2.Models.pedido

@{
    ViewData["Title"] = "Detalle Pedido";
    Layout = "_LayoutEstablecimiento";
}


@section TituloPrincipal
{
    <!-- Page Title
            ============================================= -->
    <section id="page-title" style="background-color:#9dccd6;">

        <div class="container clearfix">
            <h1 data-animate="fadeInUp">Pedidos</h1>
            <span data-animate="fadeInUp" data-delay="300">@ViewBag.Establecimiento</span>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Administración</a></li>
                <li class="breadcrumb-item"><a>Prodcutos</a></li>
                <!--<li class="breadcrumb-item active" aria-current="page">Page Titles</li>-->
            </ol>
        </div>

    </section><!-- #page-title end -->
}


<div class="container clearfix">

    <h3>Detalle Pedido</h3>

    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Fecha
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.fecha)
            </dd>
            <dt class="col-sm-2">
                Nombre cliente
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.nombreCliente)
            </dd>

            <dt class="col-sm-2">
                Nit
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.nit)
            </dd>
            <dt class="col-sm-2">
                Dirección Entrega
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.direccionEntrega),
                @Html.DisplayFor(model => model.municipio),
                @Html.DisplayFor(model => model.departamento)
            </dd>
            <dt class="col-sm-2">
                Teléfono
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.telefono)
            </dd>
            <dt class="col-sm-2">
                Correo Electrónico
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.correo)
            </dd>

            <dt class="col-sm-2">
                Estado
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.estados.nombre)
            </dd>

            <dt class="col-sm-2">
                Total
            </dt>
            <dd class="col-sm-10">
                Q @ViewBag.totalPedido
            </dd>
        </dl>
    </div>

    <div class="table-responsive">
        <table class="table cart">
            <thead>
                <tr>
                    <th class="cart-product-thumbnail">&nbsp;</th>
                    <th class="cart-product-quantity">Cantidad</th>
                    <th class="cart-product-name">Nombre del producto</th>
                    <th class="cart-product-name">Precio</th>
                    <th class="cart-product-subtotal">Total</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in (IEnumerable<GestionVentasV2.Models.ViewModels.productoVM>)ViewBag.detalle)
                {
                    <tr class="cart_item">
                        <td class="cart-product-thumbnail">
                            <a href="#"><img width="64" height="64" src="/@item.pathImagen" alt="Pink Printed Dress"></a>
                        </td>

                        <td>
                            @item.cantidad
                        </td>
                        <td class="cart-product-name">
                            @item.nombre
                        </td>
                        <td class="cart-vproduct-name">
                            Q @item.precioVenta
                        </td>

                        <td class="cart-product-name">
                            <a href="#">Q @item.subTotal</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>    


    <div>
        <a asp-action="Edit" asp-route-id="@Model.id">Edit</a> |
        <a asp-action="Index">Regresar a la lista</a>
    </div>
</div>
