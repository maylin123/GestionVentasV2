@{
    ViewData["Title"] = "Generar Pedido";
    Layout = "_LayoutPublic";
  
}


@section TituloPrincipal
{
    <!-- Page Title
            ============================================= -->
    <section id="page-title" style="background-image: url('../imagenes/header/headerbg.jpeg'); padding: 120px 0;" data-bottom-top="background-position:0px 300px;" data-top-bottom="background-position:0px -300px;">

        <div class="container clearfix">
            <h1 data-animate="fadeInUp">Generar Nuevo pedido</h1>
            <!--<span data-animate="fadeInUp" data-delay="300">A Short Page Title Tagline</span>-->
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Inicio</a></li>
                <li class="breadcrumb-item"><a href="#">@ViewBag.datosEstablecimiento.nombreComercial</a></li>
                <!--<li class="breadcrumb-item active" aria-current="page">Page Titles</li> -->
            </ol>
        </div>

    </section><!-- #page-title end -->
}
<div class="container clearfix">
    <div class="row col-mb-50 gutter-50">
        <div class="col-lg-6">
            <h4>Detalle del pedido</h4>

            <div class="table-responsive">
                <table class="table cart">
                    <thead>
                        <tr>
                            <th class="cart-product-thumbnail">&nbsp;</th>
                            <th class="cart-product-name">Nombre del producto</th>
                            <th class="cart-product-quantity">Cantidad</th>
                            <th class="cart-product-subtotal">Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="cart_item">
                            <td class="cart-product-thumbnail">
                                <a href="#"><img width="64" height="64" src="/@Model.pathImagen" alt="Pink Printed Dress"></a>
                            </td>

                            <td class="cart-product-name">
                                <a href="#">@Model.nombre</a>
                            </td>

                            <td class="cart-product-quantity">
                                <div class="quantity clearfix">
                                    @Model.cantidad
                                </div>
                            </td>

                            <td class="cart-product-subtotal">
                                <span class="amount">Q @Model.subTotal</span>
                            </td>
                        </tr>
                    </tbody>

                </table>
            </div>
        </div>

        <div class="col-lg-6">
            <h4>Totales</h4>

            <div class="table-responsive">
                <table class="table cart">
                    <tbody>
                        <!--
                        <tr class="cart_item">
                            <td class="border-top-0 cart-product-name">
                                <strong>Total pedido</strong>
                            </td>

                            <td class="border-top-0 cart-product-name">
                                <span class="amount">$106.94</span>
                            </td>
                        </tr>-->


                        <tr class="cart_item">
                            <td class="cart-product-name">
                                <strong>Total Pedido</strong>
                            </td>

                            <td class="cart-product-name">
                                <span class="amount color lead"><strong>Q @Model.subTotal</strong></span>
                            </td>
                        </tr>

                        <tr class="cart_item">
                            <td class="cart-product-name">
                                <strong>Costo de envío (pago adicional)</strong>
                            </td>

                            <td class="cart-product-name">
                                <span class="amount">Q 30.00</span>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="accordion clearfix">
                <div class="accordion-header">
                    <div class="accordion-icon">
                        <i class="accordion-closed icon-line-minus"></i>
                        <i class="accordion-open icon-line-check"></i>
                    </div>
                    <div class="accordion-title">
                        Pago contra entrega
                    </div>
                </div>
                <form class="accordion-content clearfix" asp-action="RegistrarPedido" asp-controller="Pedido">
                    Pagas al momento de recibir tus productos.

                    <h4 class="mt-3">Datos del cliente</h4>

                    <div class="row">
                        <div class="col-md-6 form-group">
                            <label for="billing-form-name">Nombre del cliente</label>
                            <input type="text" id="billing-form-name" name="nombreCliente" maxlength="100" value="" class="sm-form-control" />
                        </div>

                        <div class="col-md-6 form-group">
                            <label for="billing-form-name">Nit</label>
                            <input type="text" id="billing-form-name" name="nit" maxlength="100" value="" class="sm-form-control" />
                        </div>

                        <div class="col-md-6 form-group">
                            <label for="billing-form-name">Dirección</label>
                            <input type="text" id="billing-form-name" name="direccion" maxlength="100" value="" class="sm-form-control" />
                        </div>

                    </div>

                    <h4 class="mt-3">Datos de envío</h4>

                    <input type="hidden" id="billing-form-lname" name="cantidad" value="@Model.cantidad" class="sm-form-control" />
                    <input type="hidden" id="billing-form-lname" name="producto_id" value="@Model.id" class="sm-form-control" />
                    <input type="hidden" id="billing-form-lname" name="precio" value="@Model.precioVenta" class="sm-form-control" />
                    <input type="hidden" id="billing-form-lname" name="establecimiento_id" value="@Model.establecimientoId" class="sm-form-control" />


                    <div class="row">


                        <div class="col-md-6 form-group">
                            <label for="billing-form-name">Dirección de entrega</label>
                            <input type="text" id="billing-form-name" name="direccionEntrega" maxlength="100" value="" class="sm-form-control" />
                        </div>

                        <div class="col-md-6 form-group">
                            <label for="billing-form-name">Departamento</label>
                            <input type="text" id="billing-form-name" name="departamento" maxlength="100" value="" class="sm-form-control" />
                        </div>

                        <div class="col-md-6 form-group">
                            <label for="billing-form-lname">Municipio</label>
                            <input type="text" id="billing-form-lname" name="municipio" maxlength="100" value="" class="sm-form-control" />
                        </div>


                        <div class="col-md-6 form-group">
                            <label for="billing-form-lname">Teléfono</label>
                            <input type="phone" id="billing-form-lname" name="telefono" maxlength="100" value="" class="sm-form-control" />
                        </div>

                        <div class="col-md-6 form-group">
                            <label for="billing-form-lname">Correo electrónico</label>
                            <input type="email" id="billing-form-lname" name="correo" maxlength="100" value="" class="sm-form-control" />
                        </div>
                    </div>
                    <button type="submit" class="button button-3d float-end">Realizar pedido</button>

                </form>




