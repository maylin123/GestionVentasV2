@model GestionVentasV2.Models.oferta

@{
    ViewData["Title"] = "Delete";
}

<h1>Está seguro de @(Model.estados_id== 1 ? "deshabilitar" : "habilitar") la oferta?</h1>

<div>
    <h4>oferta</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.descripcion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.descripcion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.imagen)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.imagen)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.fechaApertura)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.fechaApertura)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.fechaCierre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.fechaCierre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.establecimiento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.establecimiento.correoElectronico)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.estados)
        </dt>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.usuarioCreacion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.usuarioCreacion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.fechaCreacion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.fechaCreacion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.usuarioActualizacion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.usuarioActualizacion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.fechaActualizacion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.fechaActualizacion)
        </dd>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.estados.nombre)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="id" />
        <input type="submit" value="@(Model.estados_id== 1 ? "Deshabilitar" : "Habilitar")" class="btn @(Model.estados_id== 1 ? "btn-danger" : "btn-success")" /> |
        <a asp-action="Index">Regresar a la lista</a>
    </form>
</div>
