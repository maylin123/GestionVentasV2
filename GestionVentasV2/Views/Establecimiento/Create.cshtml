                </div>
                <div class="form-group">
                    <label asp-for="descripcionGeneral" class="control-label">Descripción general del establecimiento</label>
                    <textarea asp-for="descripcionGeneral" maxlength="1000" rows="4" class="form-control"></textarea>
                    <span asp-validation-for="descripcionGeneral" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="nit" class="control-label"></label>
