                </div>
                <div class="form-group">
                    <label asp-for="direccionMobiliaria" class="control-label"></label>
                    <input asp-for="direccionMobiliaria" class="form-control" />
                    <span asp-validation-for="direccionMobiliaria" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="telefono" class="control-label"></label>
                    <input asp-for="telefono" class="form-control" />
                    <span asp-validation-for="telefono" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="pathImagen" class="control-label">Path Logo</label>
                    <input asp-for="pathImagen" class="form-control" />
                    <span asp-validation-for="pathImagen" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="tipoEstablecimiento_id" class="control-label">Tipo Establecimiento</label>
                    <select asp-for="tipoEstablecimiento_id" class="form-control" asp-items="ViewBag.tipoEstablecimiento_id"></select>
                </div>

