@model GestionVentasV2.Models.producto

@{
    ViewData["Title"] = "Details";
    Layout = "_LayoutEstablecimiento";
}

@section TituloPrincipal
{
    <!-- Page Title
            ============================================= -->
    <section id="page-title" style="background-color:#9dccd6;">

        <div class="container clearfix">
            <h1 data-animate="fadeInUp">Productos</h1>
            <span data-animate="fadeInUp" data-delay="300">@ViewBag.Establecimiento</span>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Administración</a></li>
                <li class="breadcrumb-item"><a>Productos</a></li>
                <!--<li class="breadcrumb-item active" aria-current="page">Page Titles</li>-->
            </ol>
        </div>

    </section><!-- #page-title end -->
}


<div class="container clearfix">

    <h3>Detalle Pedido</h3>

    <div>

        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Nombre
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.nombre)
            </dd>
            <dt class="col-sm-2">
                Descripción
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.descripcion)
            </dd>
            <dd class="col-sm-10">
                Path Imagen
            </dd>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.establecimiento.nombreComercial)
            </dd>
            <dt class="col-sm-2">
                Establecimiento
            </dt>
            
            <dt class="col-sm-2">
                Tipo
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.tipoProducto.nombre)
            </dd>
            <dt class="col-sm-2">
                Categoría
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.categoria.descripcion)
            </dd>
            <dt class="col-sm-2">
                Estado
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.estados.nombre)
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.id">Edit</a> |
        <a asp-action="Index">Regresar a la lista</a>
    </div>
</div>
