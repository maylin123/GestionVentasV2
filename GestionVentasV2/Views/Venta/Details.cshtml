@model GestionVentasV2.Models.venta

@{
    ViewData["Title"] = "Detalle Venta";
    Layout = "_LayoutEstablecimiento";
}


@section TituloPrincipal
{
    <!-- Page Title
            ============================================= -->
    <section id="page-title" style="background-color:#9dccd6;">

        <div class="container clearfix">
            <h1 data-animate="fadeInUp">Ventas</h1>
            <span data-animate="fadeInUp" data-delay="300">@ViewBag.Establecimiento</span>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Administración</a></li>
                <li class="breadcrumb-item"><a>Prodcutos</a></li>
                <!--<li class="breadcrumb-item active" aria-current="page">Page Titles</li>-->
            </ol>
        </div>

    </section><!-- #page-title end -->
}


<div class="container clearfix">
    <h3>Detalle venta</h3>

    <div>

        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Fecha Pedido
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.fechaPedido)
            </dd>
            <dt class="col-sm-2">
                Fecha Facturación
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.fechaEntrega)
            </dd>
            <dt class="col-sm-2">
                Total Venta
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.totalVenta)
            </dd>

            <dt class="col-sm-2">
                Establecimiento
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.establecimiento.nombreComercial)
            </dd>
            <dt class="col-sm-2">
                Cliente
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.pedido.nombreCliente)
            </dd>
            <dt class="col-sm-2">
                Estado
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.estados.nombre)
            </dd>
        </dl>
    </div>

    <div class="table-responsive">
        <table class="table cart">
            <thead>
                <tr>
                    <th class="cart-product-thumbnail">&nbsp;</th>
                    <th class="cart-product-quantity">Cantidad</th>
                    <th class="cart-product-name">Nombre del producto</th>
                    <th class="cart-product-name">Precio</th>
                    <th class="cart-product-subtotal">Total</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in (IEnumerable<GestionVentasV2.Models.ViewModels.productoVM>)ViewBag.detalle)
                {
                    <tr class="cart_item">
                        <td class="cart-product-thumbnail">
                            <a href="#"><img width="64" height="64" src="/@item.pathImagen" alt="Pink Printed Dress"></a>
                        </td>

                        <td>
                            @item.cantidad
                        </td>
                        <td class="cart-product-name">
                            @item.nombre
                        </td>
                        <td class="cart-vproduct-name">
                            Q @item.precioVenta
                        </td>

                        <td class="cart-product-name">
                            <a href="#">Q @item.subTotal</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.id">Edit</a> |
        <a asp-action="Index">Regresar a la lista</a>
    </div>
</div>
